@using Connect.Razor.Blade;
<div>
    return to <a href="@Link.To()">overview</a>
</div>
<h1 class="sc-element">
    Razor Blade Tags BR/NewLine Conversions
    @Edit.Toolbar(Content)
</h1>
<div>
    These demos show how to convert BR tags to spaces, New-Lines or New-Lines to BRs. 
</div>

@{
    var val1 = "This is a text.\nSecond line.\nThird line.";
    var val1br = Tags.Nl2Br(val1);
    var val1Back = Tags.Br2Nl(val1br);
    var val1Space = Tags.Br2Space(val1br);
}

<h2>Simple example</h2>
<h3>Original</h3>
<textarea>@val1</textarea>

<h3>Converting New-Line to br with Tags.Nl2Br(...)</h3>
<textarea>@val1br</textarea>
<br>
<strong>or as HTML</strong> <br>
@Html.Raw(val1br)

<h3>Convert the br back with Tags.Br2Nl</h3>
<textarea>
@val1Back
</textarea>

<h3>Cleaning BR as Space with Tags.Br2Space</h3>
<textarea>
@val1Space
</textarea>

<style>
    textarea {
        width: 400px;
        height: 50px;
    }
</style>